# Hotel Senang Hati - Environment Configuration
# Copy this file to .env and update the values according to your setup

# Database Configuration
DB_HOST=localhost
DB_NAME=hotel_senang_hati
DB_USER=root
DB_PASS=
DB_PORT=3306
DB_CHARSET=utf8mb4

# Production Database Options (choose one):

# Option 1: PlanetScale (Recommended)
# PLANETSCALE_HOST=aws.connect.psdb.cloud
# PLANETSCALE_USERNAME=your-planetscale-username  
# PLANETSCALE_PASSWORD=your-planetscale-password
# PLANETSCALE_DATABASE=hotel-senang-hati

# Option 2: Railway MySQL
# RAILWAY_MYSQL_URL=mysql://user:pass@host:port/database

# Option 3: Supabase PostgreSQL
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key

# Application Configuration
APP_NAME="Hotel Senang Hati"
APP_URL=http://localhost:8080
APP_ENV=development
APP_DEBUG=true

# Timezone
APP_TIMEZONE=Asia/Jakarta

# Security
SESSION_LIFETIME=1440
ENCRYPTION_KEY=your-32-character-secret-key-here

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@hotelsenanghati.com
MAIL_FROM_NAME="Hotel Senang Hati"

# WhatsApp Integration
WHATSAPP_NUMBER=6289629749277
WHATSAPP_API_URL=https://wa.me/

# Payment Gateway (if needed)
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# File Upload
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Logging
LOG_LEVEL=info
LOG_FILE=logs/application.log
